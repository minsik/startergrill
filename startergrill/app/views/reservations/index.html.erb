<h1>Listing reservations</h1>

<table>
  <tr>
    <th>Reservation time</th>
    <th>Size</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @reservations.each do |reservation| %>
  <tr>
    <td><%= reservation.reservation_time %></td>
    <td><%= reservation.size %></td>
    <td><%= reservation.user_id %></td>
    <td><%= link_to 'Show', reservation %></td>
    <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
    <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />
  <div>
      <p>New Reservation.</p>
      <%= form_tag(new_reservation_path) do %>
      <%= hidden_field_tag :userid, @userid %>
      <%= submit_tag("Add") %>
  </div>
<% end %>
